<Application x:Class="CVAVT.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CVAVT"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="White"/>
                <Setter Property="Foreground" Value="Black"/>
                <!-- Stil Eigenschaften für den Light Mode hier definieren -->
            </Style>
            <!-- Light Mode Stile -->
            <Style x:Key="LightButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="White"/>
                <Setter Property="Foreground" Value="Black"/>
                <!-- Stil Eigenschaften für den Light Mode hier definieren -->
            </Style>

            <!-- Dark Mode Stile -->
            <Style x:Key="DarkButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#121212"/>
                <Setter Property="Foreground" Value="White"/>

                <!-- Stil Eigenschaften für den Dark Mode hier definieren -->
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
