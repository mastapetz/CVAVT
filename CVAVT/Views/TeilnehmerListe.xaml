<Window x:Class="CVAVT.Views.TeilnehmerListe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CVAVT.Views"
        mc:Ignorable="d"
        Title="Teilnehmer Liste" Height="400" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="109*"/>
            <ColumnDefinition Width="177*"/>
            <ColumnDefinition Width="34*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="279*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>

        <DataGrid ItemsSource="{Binding TeilnehmerListe}" SelectedItem="{Binding SelectedTeilnehmer}" CanUserAddRows="False" AutoGenerateColumns="False"
                  Grid.Column="2" Grid.RowSpan="3" Grid.ColumnSpan="2" Margin="0,25,0,0" >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding TeilnehmerName}" Header="Name" Width="50*"></DataGridTextColumn>
                <DataGridTemplateColumn Header="Löschen" Width="25*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Löschen" ToolTip="Teilnehmer Löschen"
                                    Command="{Binding DataContext.TeilnehmerLoeschenCmd , RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}">
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Ändern" Width="25*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Ändern" ToolTip="Teilnehmer Ändern"
                                    Command="{Binding DataContext.TeilnehmerEditCmd, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}">
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
        <Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" >
            <MenuItem Header="Optionen">
                <MenuItem Header="Export"></MenuItem>
                <MenuItem Header="Beenden"></MenuItem>
            </MenuItem>



        </Menu>
        <Grid Grid.Row="1" Margin="0,40,0,0" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="49*"/>
                <RowDefinition Height="49*"/>
                <RowDefinition Height="45*"/>
                <RowDefinition Height="45*"/>
                <RowDefinition Height="45*"/>
            </Grid.RowDefinitions>
            <Button Command="{Binding NeuTeilnehmerCmd}" Content="Neuer Teilnehmer" HorizontalAlignment="Center"  Grid.Row="2" VerticalAlignment="Center" Width="110"/>
            <Button Command="{Binding ExportListeCmd}" Content="Export Liste" HorizontalAlignment="Center"  Grid.Row="3" VerticalAlignment="Center" Width="110" Background="Green"/>
            <Button Command="{Binding SchliessenCmd}" Content="Schließen" HorizontalAlignment="Center"  Grid.Row="4" VerticalAlignment="Center" Width="110" Background="Red"/>
            <Label Content="Ist" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center"/>
            <TextBox  Text="{Binding AktivitaetenIstTeilnehmer}" HorizontalAlignment="Left"  TextWrapping="Wrap" VerticalAlignment="Center" Width="46" Margin="56,0,0,0"/>
            <Label Content="Max" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" VerticalAlignment="Center"/>
            <TextBox Text="{Binding AktivitaetenMaxTeilnehmer}" HorizontalAlignment="Left"  TextWrapping="Wrap" Grid.Row="1" VerticalAlignment="Center" Width="46" Margin="56,0,0,0"/>

        </Grid>

    </Grid>
</Window>
